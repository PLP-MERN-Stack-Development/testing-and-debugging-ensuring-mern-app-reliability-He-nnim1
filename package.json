{
  "name": "mern-testing-root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "install-all": "npm --prefix server install && npm --prefix client install",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"client/src/tests|server/tests/unit\"",
    "test:integration": "jest --testPathPattern=server/tests/integration",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.7.0",
    "cypress": "^15.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  }
}
